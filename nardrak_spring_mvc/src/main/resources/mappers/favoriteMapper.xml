<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
	  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	  
<mapper namespace="com.spring.nardrak_mvc.dao.FavoriteDAO">

    <!-- 선호 여행지 추가 -->
    <insert id="addFavorite" parameterType="com.spring.nardrak_mvc.dto.FavoriteDTO">
        INSERT INTO favorites_list(dest_id, ad_id, dest_name, image_url, description, added_date)
        VALUES(#{dest_id}, #{ad_id}, #{dest_name}, #{image_url}, #{description}, DEFAULT)
    </insert>

    <!-- 선호 여행지 제거 -->
    <delete id="removeFavorite" parameterType="java.util.HashMap">
        DELETE FROM favorites_list WHERE dest_id = #{dest_id} AND ad_id = #{ad_id}
    </delete>
    
    <!-- 선호 여행지 목록 조회 -->
	<select id="getFavoriteList" parameterType="String" resultType="com.spring.nardrak_mvc.dto.FavoriteDTO">
		SELECT *
		  FROM favorites_list
		 WHERE ad_id = #{ad_id}
	</select>
</mapper>